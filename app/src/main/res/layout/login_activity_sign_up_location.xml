<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUpLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="회원가입"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/xbtn"/>
        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/location_line"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치를 추가해 주세요."
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="70dp"/>

            <EditText
                android:id="@+id/locationSearchEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="위치 검색 및 추가..."
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="10dp"
                android:background="@drawable/location_search_background"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="false"
                android:padding="5dp"/>

            <Button
                android:id="@+id/locationBtnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음"
                android:textColor="@color/white"
                android:background="@drawable/rounded_nextbtn_selector"
                android:textStyle="bold"
                android:padding="11dp"
                android:enabled="false"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>